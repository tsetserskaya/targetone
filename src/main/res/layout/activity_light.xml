<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LightActivity">

    <ToggleButton
        android:id="@+id/toggle_button_Rx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOn="@string/rx"
        android:textOff="@string/rx"
        android:gravity="start|center_vertical"
        android:drawableEnd="@drawable/icon_on_off"
        android:drawableRight="@drawable/icon_on_off"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        android:textColor="@color/text_color"
        android:background="@drawable/button_background"/>
    <ToggleButton
        android:id="@+id/toggle_button_Tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggle_button_Rx"
        android:layout_marginTop="10dp"
        android:textOn="@string/tx"
        android:textOff="@string/tx"
        android:gravity="start|center_vertical"
        android:drawableEnd="@drawable/icon_on_off"
        android:drawableRight="@drawable/icon_on_off"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        android:textColor="@color/text_color"
        android:background="@drawable/button_background"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_below="@id/toggle_button_Tx"
        android:id="@+id/imageViewLeo"
        android:src="@drawable/arduino_normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
